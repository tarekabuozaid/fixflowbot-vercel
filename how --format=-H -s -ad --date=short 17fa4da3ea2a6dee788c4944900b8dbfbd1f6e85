[32m+[m[32m              parse_mode: 'Markdown',[m
[32m+[m[32m              ...Markup.inlineKeyboard([[m
[32m+[m[32m                [Markup.button.callback('ğŸ†“ Free Plan', 'regfac_plan|Free')],[m
[32m+[m[32m                [Markup.button.callback('â­ Pro Plan', 'regfac_plan|Pro')],[m
