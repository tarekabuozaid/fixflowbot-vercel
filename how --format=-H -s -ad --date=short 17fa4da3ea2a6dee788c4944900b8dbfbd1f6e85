[32m+[m[32m      const priorityEmojis = {[m
[32m+[m[32m        'high': 'ğŸ”´',[m
[32m+[m[32m        'medium': 'ğŸŸ¡',[m
[32m+[m[32m        'low': 'ğŸŸ¢'[m
[32m+[m[32m      };[m
[32m+[m
[32m+[m[32m      const priorityEmoji = priorityEmojis[workOrderData.priority] || 'âšª';[m
[32m+[m
[32m+[m[32m      await ctx.reply([m
[32m+[m[32m        `âœ… **Work Order Created Successfully!**\n\n` +[m
[32m+[m[32m        `ğŸ“‹ **Work Order #${workOrder.id}**\n\n` +[m
[32m+[m[32m        `ğŸ”§ **Type:** ${workOrderData.typeOfWork}\n` +[m
[32m+[m[32m        `ğŸ› ï¸ **Service:** ${workOrderData.typeOfService}\n` +[m
[32m+[m[32m        `${priorityEmoji} **Priority:** ${workOrderData.priority}\n` +[m
[32m+[m[32m        `ğŸ“ **Location:** ${workOrderData.location}\n` +[m
[32m+[m[32m        `${workOrderData.equipment ? `âš™ï¸ **Equipment:** ${workOrderData.equipment}\n` : ''}` +[m
[32m+[m[32m        `ğŸ“ **Description:** ${workOrderData.description}\n\n` +[m
[32m+[m[32m        `ğŸ“… **Created:** ${new Date().toLocaleString()}\n` +[m
[32m+[m[32m        `ğŸ‘¤ **Created by:** ${user.firstName || 'User'}\n\n` +[m
[32m+[m[32m        `Your work order has been submitted and is now being reviewed.`,[m
[32m+[m[32m        {[m
[32m+[m[32m          parse_mode: 'Markdown',[m
[32m+[m[32m          ...Markup.inlineKeyboard([[m
[32m+[m[32m            [Markup.button.callback('ğŸ“‹ View Work Order', `wo_view|${workOrder.id}`)],[m
[32m+[m[32m            [Markup.button.callback('â• Create Another', 'wo_new')],[m
[32m+[m[32m            [Markup.button.callback('ğŸ”™ Back to Menu', 'back_to_menu')][m
[32m+[m[32m          ])[m
[32m+[m[32m        }[m
[32m+[m[32m      );[m
[32m+[m[32m    }, ctx, 'create_work_order');[m
