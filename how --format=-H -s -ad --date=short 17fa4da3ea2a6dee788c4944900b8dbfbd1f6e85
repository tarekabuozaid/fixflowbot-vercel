[32m+[m[32m        {[m
[32m+[m[32m          parse_mode: 'Markdown',[m
[32m+[m[32m          ...Markup.inlineKeyboard([[m
[32m+[m[32m            [Markup.button.callback('âŒ Cancel Registration', 'regfac_cancel')][m
[32m+[m[32m          ])[m
[32m+[m[32m        }[m
